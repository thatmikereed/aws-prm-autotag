{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "ResourceGroupsTaggingAPI",
      "Effect": "Allow",
      "Action": [
        "tag:GetResources",
        "tag:TagResources",
        "tag:UntagResources"
      ],
      "Resource": "*"
    },
